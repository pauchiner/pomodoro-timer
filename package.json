{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "private": true,
  "description": "A pomodoro timer built with electron and react",
  "author": "Pau GarcÃ­a Chiner",
  "build": {
    "appId": "com.pomodoro-timer",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "build/favicon.png"
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "build/favicon.ico"
    },
    "nsis": {
      "installerIcon": "build/favicon.ico",
      "installerHeaderIcon": "build/favicon.ico",
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@chakra-ui/icons": "2.0.10",
    "@chakra-ui/react": "2.3.4",
    "@emotion/react": "11.10.4",
    "@emotion/styled": "11.10.4",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.49",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "concurrently": "7.3.0",
    "cross-env": "7.0.3",
    "electron-is-dev": "2.0.0",
    "framer-motion": "7.3.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "4.7.4",
    "wait-on": "7.2.0",
    "web-vitals": "2.1.4"
  },
  "overrides": {
    "got": "12.3.1",
    "nth-check": "2.1.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --linux --win --mac --x64 --ia32 --publish never",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "prettier": "npx prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "22.3.25",
    "electron-builder": "^22.10.3",
    "prettier": "2.7.1"
  }
}
